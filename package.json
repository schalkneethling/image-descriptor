{
  "name": "image-descriptor",
  "displayName": "Image Descriptor",
  "description": "Generate accessible alternative text for images using AI",
  "version": "3.0.1",
  "publisher": "schalkneethling",
  "icon": "assets/image-descriptor-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/schalkneethling/image-descriptor.git"
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "image-descriptor.suggestAltText",
        "title": "Image Descriptor: Suggest alternative text"
      },
      {
        "command": "image-descriptor.translateAltText",
        "title": "Image Descriptor: Translate to English"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "image-descriptor.suggestAltText",
          "when": "editorLangId == html"
        },
        {
          "command": "image-descriptor.translateAltText",
          "when": "editorLangId == html"
        }
      ]
    },
    "configuration": {
      "title": "Image Descriptor",
      "properties": {
        "imageDescriptor.provider": {
          "type": "string",
          "default": "openai",
          "description": "Model provider",
          "enum": [
            "openai",
            "mistral"
          ],
          "enumDescriptions": [
            "OpenAI",
            "Mistral"
          ]
        },
        "imageDescriptor.apiKey": {
          "type": "string",
          "default": "",
          "description": "Provider API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package",
    "publish": "npm run package && npx vsce publish",
    "publish:patch": "npm version patch && npm run publish",
    "publish:minor": "npm version minor && npm run publish",
    "publish:major": "npm version major && npm run publish",
    "prettier:lint": "prettier .",
    "prettier:format": "prettier --write .",
    "lint:eslint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "glob": "^10.3.3",
    "globals": "^16.3.0",
    "mocha": "^10.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.1.6"
  }
}
